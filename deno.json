{
  "tasks": {
    "dev": "deno run --watch src/main.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  },
  "test": {
    "include": ["tests/"],
    "exclude": ["**/testdata/", "**/fixtures/**/*.ts"]
  },
  "lint": {
    "include": ["src/", "tests/"],
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars"]
    }
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 4,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/", "tests/"]
  }
}
